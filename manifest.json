{
  "manifest_version": 3,
  "name": "Bionic Reading Enhancer",
  "version": "2.0",
  "description": "Bolds the first half of words on any webpage for faster reading.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bionic-reader-processed"],
      "matches": ["<all_urls>"]
    }
  ]
}