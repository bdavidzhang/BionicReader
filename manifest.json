{
  "manifest_version": 3,
  "name": "Velocity Text",
  "version": "2.0",
  "description": "Enhance your reading speed and focus with Velocity Text. This extension bolds the start of each word, guiding your eyes for a faster, smoother reading experience.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["velocity-text-processed"],
      "matches": ["<all_urls>"]
    }
  ]
}